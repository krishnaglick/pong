{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 7
  },
  "extends": ["eslint:recommended"],
  "parser": "babel-eslint",
  "globals": [
    "Phaser"
  ],
  "rules": {
    "indent": [
      "warn",
      2
    ],
    "semi": [
      "error",
      "always"
    ],
    "strict": 0,
    "no-console": "off",
    "require-yield": "off"
  }
}